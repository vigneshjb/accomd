<%- model_class = Booking -%>
<div class="page-header">
  <h1>Bookings made on properties of <%= current_user.username %></h1>
</div>
<% if @bookings.count>0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:from) %></th>
        <th><%= model_class.human_attribute_name(:to) %></th>
        <th><%= model_class.human_attribute_name(:property_id) %></th>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.id %></td>
          <td><%= booking.from %></td>
          <td><%= booking.to %></td>
          <td><%= booking.property_id %></td>
          <td><%= booking.user_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-center"><strong> No Bookings are made on your property </strong></p>
<%end%>